# RapidAPI Instagram Configuration
RAPIDAPI_KEY=your_rapidapi_key
RAPIDAPI_HOST=instagram120.p.rapidapi.com

# Twitter/X Configuration
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Archive Configuration
#
# Single account (legacy):
# INSTAGRAM_USERNAME=jkt48.gendis
#
# Multiple accounts (recommended):
INSTAGRAM_USERNAMES=jkt48.gendis,jkt48.lana.a

# Optional: per-account template name for the first post (anchor tweet)
# Should match the order in INSTAGRAM_USERNAMES
INSTAGRAM_TEMPLATE_NAMES=Gendis,Lana

# Optional: customize per-account thread anchor tweet text (JSON)
# Example:
# TWITTER_THREAD_CONFIG={"jkt48.gendis":{"anchor_text":"Gendis JKT48 Instagram Story"},"jkt48.lana.a":{"template_name":"Lana"}}

ARCHIVE_DB_PATH=./archive.json
MEDIA_CACHE_DIR=./media_cache

# Discord Webhooks for notifications (optional but recommended)
# Use 2 separate webhooks so success logs and failure logs go to different channels.
# Get these from: Discord Server Settings > Integrations > Webhooks
# DISCORD_WEBHOOK_SUCCESS_URL=https://discord.com/api/webhooks/your-success-webhook-url
# DISCORD_WEBHOOK_FAILURE_URL=https://discord.com/api/webhooks/your-failure-webhook-url
#
# Legacy (single webhook) - still supported:
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your-webhook-url

# Proxy Configuration (optional, for Cloudflare blocking prevention)
# Set this to route all HTTP/HTTPS traffic through a proxy
# This is especially useful in GitHub Actions to prevent Cloudflare IP blocking
# PROXY_URL=http://proxy.example.com:8080

# Note: GitHub Actions runs this every 8 hours (see .github/workflows/archive-stories.yml)
# For local development, just run: python main.py
